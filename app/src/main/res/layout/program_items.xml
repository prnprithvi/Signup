<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_marginBottom="16dp"
    android:id="@+id/news_card" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_card"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="7.5dp"
        >


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#4D000000"
            android:id="@+id/pTitle_main">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="6dp"
            android:text="Holy Mass "
            android:textColor="@color/windowBackground"
            android:textSize="23dp"


            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/pTitle"
            android:layout_centerVertical="true"
            android:gravity="center_vertical|center|fill_vertical" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginTop="6dp"
            android:id="@+id/program_desc"
            android:textSize="16dp"
            android:visibility="invisible"

            android:background="@color/windowBackground"
            android:text="@string/program_one"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/time" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text=" Venue: University of Nairobi "
            android:textStyle="bold"
            android:textSize="19dp"
            android:id="@+id/pVenue"
            android:layout_below="@+id/pTitle_main"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Time: 08:00 - 10:00 AM "
            android:textSize="19dp"
            android:id="@+id/time"
            android:textStyle="bold"

            android:layout_below="@+id/pVenue"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@+id/time"
            android:orientation="horizontal">



        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Direction"
            android:clickable="true"
            android:textColor="#0864f7"
            android:textStyle="bold"
            android:id="@+id/showDirection"
            android:textSize="14dp"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal"


            android:layout_centerHorizontal="true" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
    android:src="@drawable/g_maps"
            android:textColor="#0864f7"
            android:textSize="14dp"
            android:id="@+id/imageView3"
            android:layout_marginLeft="3dp"
      />

        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>


