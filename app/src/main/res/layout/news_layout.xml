<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_marginBottom="16dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:id="@+id/news_card" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="355dp"
        android:layout_below="@+id/main_card"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#4D000000"
            android:layout_alignBottom="@+id/image"
            android:id="@+id/nTitle_main">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="6dp"
                android:text="Holy Mass "
                android:textColor="@color/windowBackground"
                android:textSize="30dp"


                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/nTitle"
                android:layout_centerVertical="true"
                android:gravity="center_vertical|center|fill_vertical" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginTop="6dp"
            android:id="@+id/news_content"
            android:textSize="16dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:background="@color/windowBackground"
            android:text="@string/program_one"
            android:textStyle="bold"

            android:layout_below="@+id/image"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/darker_gray"
            android:id="@+id/view"
            android:layout_below="@+id/news_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read More "
            android:clickable="true"
            android:textColor="#0864f7"
            android:id="@+id/showDirection"
            android:textSize="14dp"
            android:layout_below="@+id/view"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

</android.support.v7.widget.CardView>


